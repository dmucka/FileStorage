@page
@model FileStoragePL.Pages.FileVersions.AddModel
@{
    ViewData["Title"] = "Add Version";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Add new version</h1>
    <p>Add a new version to the versioned file.</p>
    <a asp-page="/VersionedFiles/Open" asp-route-id="@this.Model.VersionedFileModel.Id">Return</a>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Number" class="control-label"></label>
                    <input asp-for="Input.Number" class="form-control" />
                    <span asp-validation-for="Input.Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Changelog" class="control-label"></label>
                    <textarea asp-for="Input.Changelog" class="form-control"></textarea>
                    <span asp-validation-for="Input.Changelog" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="@this.Model.VersionedFileModel.Id" />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
