@page
@model FileStoragePL.Pages.VersionedFiles.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>VersionedFile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VersionedFile.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VersionedFile.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VersionedFile.Deleted)
        </dt>

        @if (Model.VersionedFile.Deleted == null)
        {
            <dd class="col-sm-10">
                not deleted
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VersionedFile.Deleted)
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VersionedFile.NewestVersion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VersionedFile.NewestVersion.Number)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.VersionedFile.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
