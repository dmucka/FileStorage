@page
@model FileStoragePL.Pages.VersionedFiles.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>VersionedFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VersionedFile.Name" class="control-label"></label>
                <input asp-for="VersionedFile.Name" class="form-control" />
                <span asp-validation-for="VersionedFile.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionedFile.Deleted" class="control-label"></label>
                <input asp-for="VersionedFile.Deleted" class="form-control" />
                <span asp-validation-for="VersionedFile.Deleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionedFile.NewestVersionId" class="control-label"></label>
                <select asp-for="VersionedFile.NewestVersionId" class="form-control" asp-items="ViewBag.NewestVersionId"></select>
                <span asp-validation-for="VersionedFile.NewestVersionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionedFile.FolderId" class="control-label"></label>
                <select asp-for="VersionedFile.FolderId" class="form-control" asp-items="ViewBag.FolderId"></select>
                <span asp-validation-for="VersionedFile.FolderId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="VersionedFile.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
