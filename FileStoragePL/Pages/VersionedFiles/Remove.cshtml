@page
@model FileStoragePL.Pages.VersionedFiles.RemoveModel
@{
    ViewData["Title"] = "Remove Versioned File";
}
<div class="text-center">

    <h1 class="display-4">Versioned file @this.Model.VersionedFileModel.Name</h1>
    <p>Are you sure you want to delete this versioned file?</p>
    <a asp-page="/VersionedFiles/Open" asp-route-id="@this.Model.VersionedFileModel.Id">Return</a>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="@this.Model.VersionedFileModel.Id" />
                <input type="submit" value="Delete" class="btn btn-danger w-100" />
            </form>
        </div>
    </div>
</div>
