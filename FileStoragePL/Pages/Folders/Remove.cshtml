@page
@model FileStoragePL.Pages.Folders.RemoveModel
@{
    ViewData["Title"] = "Remove Folder";
}
<div class="text-center">

    <h1 class="display-4">Folder @this.Model.FolderModel.Name</h1>
    <p>Are you sure you want to delete this folder?</p>
    <a asp-page="/Folders/Open" asp-route-id="@this.Model.FolderModel.Id">Return</a>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="@this.Model.FolderModel.Id" />
                <input type="submit" value="Delete" class="btn btn-danger w-100" />
            </form>
        </div>
    </div>
</div>
