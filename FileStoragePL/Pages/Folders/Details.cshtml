@page
@model FileStoragePL.Pages.Folders.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Folder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Folder.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Folder.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Folder.Owner.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Folder.Owner.Username)
        </dd>
    </dl>
</div>

<hr />

<b>Subfolders:</b>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Folder.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Folder.Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Folder.Folders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.Username)
                </td>
                <td>
                    <a asp-page="./Rename" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Folder.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
